{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block body %}
    <section>
        <div class="col-12 col-md-8 col-lg-6 col-xxl-6 m-auto">
            <h1>S'inscrire</h1>

            {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.firstname)}}
                {{ form_row(registrationForm.lastname)}}
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Mot de passe'
                }) }}
                {{ form_row(registrationForm.birthdate)}}
                {{ form_row(registrationForm.agreeTerms) }}

                <button class="btn colorPrim" type="submit" >Enregistrer</button>
            {{ form_end(registrationForm) }}

            <a class="btn colorPrim" href="../login">Accueil</a>
        </div>
    </section>
        
        
{% endblock %}
